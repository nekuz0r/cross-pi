#!/bin/bash

PKG_NAME=libpciaccess-0.13.2
PKG_URL=http://xorg.freedesktop.org/releases/individual/lib/${PKG_NAME}.tar.bz2

pkg_configure() {
	${PKG_SRC_DIR}/configure 	--prefix=${CROSSPI_HOST_DIR}/usr \
					--disable-static
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
