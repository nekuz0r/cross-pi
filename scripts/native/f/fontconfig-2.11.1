#!/bin/bash

PKG_NAME=fontconfig-2.11.1
PKG_URL=http://www.freedesktop.org/software/fontconfig/release/${PKG_NAME}.tar.bz2

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=${CROSSPI_HOST_DIR}/usr \
					--sysconfdir=${CROSSPI_HOST_DIR}/etc \
					--localstatedir=${CROSSPI_HOST_DIR}/var \
					--disable-docs \
					--docdir=${CROSSPI_HOST_DIR}/usr/share/doc/fontconfig-2.11.1
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
