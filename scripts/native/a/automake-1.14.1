#!/bin/bash

PKG_NAME=automake-1.14.1
PKG_URL=http://ftp.gnu.org/gnu/automake/${PKG_NAME}.tar.xz

pkg_configure() {
	${PKG_SRC_DIR}/configure --prefix=${CROSSPI_HOST_DIR}/usr --docdir=${CROSSPI_HOST_DIR}/usr/share/doc/automake-1.14.1
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
