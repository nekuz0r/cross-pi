#!/bin/bash

PKG_NAME=gettext-0.19.3
PKG_URL=http://ftp.gnu.org/gnu/gettext/${PKG_NAME}.tar.xz

pkg_configure() {
	${PKG_SRC_DIR}/configure --prefix=${CROSSPI_HOST_DIR}/usr --docdir=${CROSSPI_HOST_DIR}/usr/share/doc/gettext-0.19.3
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
