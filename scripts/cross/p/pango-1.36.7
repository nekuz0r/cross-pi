#!/bin/bash

PKG_NAME=pango-1.36.7
PKG_URL=http://ftp.gnome.org/pub/gnome/sources/pango/1.36/${PKG_NAME}.tar.xz

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR} \
					--sysconfdir=/etc
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
