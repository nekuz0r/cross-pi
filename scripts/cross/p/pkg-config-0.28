#!/bin/bash

PKG_NAME=pkg-config-0.28
PKG_SRC_URL=http://pkgconfig.freedesktop.org/releases/${PKG_NAME}.tar.gz

crosspi_configure() {
	$PKG_SRC_DIR/configure --build=$CROSSPI_BUILD --host=$CROSSPI_HOST --target=$CROSSPI_TARGET --prefix=/usr --disable-host-tool --docdir=/usr/share/doc/pkg-config-0.28
}

crosspi_build() {
	make
}

crosspi_install() {
	make install
}
