#!/bin/bash

PKG_NAME=expat-2.1.0
PKG_URL=http://prdownloads.sourceforge.net/expat/${PKG_NAME}.tar.gz

pkg_configure() {
	${PKG_SRC_DIR}/configure --prefix=/usr --build=${CROSSPI_BUILD} --host=${CROSSPI_TARGET} --target=${CROSSPI_TARGET} --with-sysroot=${CROSSPI_TARGET_DIR}
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install INSTALL_ROOT=${CROSSPI_TARGET_DIR}
}
