#!/bin/bash

PKG_NAME=gettext-0.19.3
PKG_SRC_URL=http://ftp.gnu.org/gnu/gettext/${PKG_NAME}.tar.xz

crosspi_configure() {
	$PKG_SRC_DIR/configure --build=$CROSSPI_BUILD --host=$CROSSPI_HOST --target=$CROSSPI_TARGET --prefix=/usr --docdir=/usr/share/doc/gettext-0.19.3
}

crosspi_build() {
	make
}

crosspi_install() {
	make install
}
