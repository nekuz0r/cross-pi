#!/bin/bash

PKG_NAME=gettext-0.19.3
PKG_URL=http://ftp.gnu.org/gnu/gettext/${PKG_NAME}.tar.xz

pkg_configure() {
	$PKG_SRC_DIR/configure	--build=$CROSSPI_BUILD \
													--host=$CROSSPI_HOST \
													--target=$CROSSPI_TARGET \
													--prefix=/usr \
													--docdir=/usr/share/doc/gettext-0.19.3
}

pkg_build() {
	make
}

pkg_install() {
	make install
}
