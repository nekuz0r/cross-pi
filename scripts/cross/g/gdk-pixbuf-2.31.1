#!/bin/bash

PKG_NAME=gdk-pixbuf-2.31.1
PKG_URL=http://ftp.acc.umu.se/pub/gnome/sources/gdk-pixbuf/2.31/${PKG_NAME}.tar.xz

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR} \
					--with-x11 \
					gio_can_sniff=yes
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
