#!/bin/bash

PKG_NAME=fontconfig-2.11.1
PKG_URL=http://www.freedesktop.org/software/fontconfig/release/${PKG_NAME}.tar.bz2

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--target=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR} \
					--sysconfdir=/etc \
					--localstatedir=/var \
					--disable-docs \
					--docdir=/usr/share/doc/fontconfig-2.11.1
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
