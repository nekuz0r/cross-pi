#!/bin/bash

PKG_NAME=xf86-video-dummy-0.37
PKG_URL=http://xorg.freedesktop.org/archive/individual/driver/${PKG_NAME}.tar.bz2

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR} \
					--disable-static
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
