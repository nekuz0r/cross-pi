#!/bin/bash

PKG_NAME=Xvid-1.3.3
PKG_URL=http://downloads.xvid.org/downloads/xvidcore-1.3.3.tar.gz

PKG_EXTRACTED_DIRNAME=xvidcore/build/generic

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--target=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR}
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install DESTDIR=${CROSSPI_TARGET_DIR}
}
