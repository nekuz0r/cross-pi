#!/bin/bash

PKG_NAME=xkbcomp-1.2.4
PKG_URL=http://xorg.freedesktop.org/releases/individual/app/${PKG_NAME}.tar.bz2

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR}
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
