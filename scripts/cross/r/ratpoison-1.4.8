#!/bin/bash

PKG_NAME=ratpoison-1.4.8
PKG_URL=http://download.savannah.nongnu.org/releases/ratpoison/${PKG_NAME}.tar.xz

pkg_configure() {
  ${PKG_SRC_DIR}/configure  --prefix=/usr \
          --build=${CROSSPI_BUILD} \
          --host=${CROSSPI_HOST} \
          --with-sysroot=${CROSSPI_TARGET_DIR}
}

pkg_build() {
  make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
  make install
}