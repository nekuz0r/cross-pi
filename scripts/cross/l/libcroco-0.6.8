#!/bin/bash

PKG_NAME=libcroco-0.6.8
PKG_URL=http://ftp.gnome.org/pub/gnome/sources/libcroco/0.6/${PKG_NAME}.tar.xz

# Depends on : glib, libxml2

pkg_configure() {
	${PKG_SRC_DIR}/configure --prefix=/usr --build=${CROSSPI_BUILD} --host=${CROSSPI_TARGET} --with-sysroot=${CROSSPI_TARGET_DIR} --disable-static
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
