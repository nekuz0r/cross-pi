#!/bin/bash

PKG_NAME=libffi-3.2.1
PKG_URL=ftp://sourceware.org/pub/libffi/${PKG_NAME}.tar.gz

pkg_configure() {
	${PKG_SRC_DIR}/configure	--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_HOST} \
					--target=${CROSSPI_TARGET} \
					--prefix=/usr \
					--program-prefix="" \
					--with-sysroot=${CROSSPI_TARGET_DIR}
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
