#!/bin/bash

PKG_NAME=libwebp-0.4.1
PKG_URL=http://downloads.webmproject.org/releases/webp/libwebp-0.4.1.tar.gz

# Depends on : libjpeg-turbo, libpng, libtiff

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR} \
					--disable-static 
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
