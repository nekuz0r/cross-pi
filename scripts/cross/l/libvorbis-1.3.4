#!/bin/bash

PKG_NAME=libvorbis-1.3.4
PKG_URL=http://downloads.xiph.org/releases/vorbis/${PKG_NAME}.tar.xz

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--target=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR} \
					--disable-static \
					--disable-oggtest
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
