#!/bin/bash

PKG_NAME=libtasn1-4.1
PKG_URL=http://ftp.gnu.org/gnu/libtasn1/${PKG_NAME}.tar.gz

pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR} \
					--disable-static 
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
