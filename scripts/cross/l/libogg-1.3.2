#!/bin/bash

PKG_NAME=libogg-1.3.2
PKG_URL=http://downloads.xiph.org/releases/ogg/${PKG_NAME}.tar.xz


pkg_configure() {
	${PKG_SRC_DIR}/configure	--prefix=/usr \
					--build=${CROSSPI_BUILD} \
					--host=${CROSSPI_TARGET} \
					--with-sysroot=${CROSSPI_TARGET_DIR} \
					--docdir=/usr/share/doc/libogg-1.3.2 \
					--disable-static
}

pkg_build() {
	make -j${CROSSPI_BUILD_NPROC}
}

pkg_install() {
	make install
}
